{
  "compilerOptions": {
    // Enable latest features
    "module": "es2015",
    "target": "ESNext",
    "moduleDetection": "auto",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolvePackageJsonExports": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "noEmit": false,
    "noEmitOnError": false,
    // Best practices
    "strict": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": [
      "node"
    ],
    "rootDir": "./src",
    "sourceRoot": "./src/",
    "sourceMap": true,
    "outDir": "./dist/",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@types/node"
    ]
  },
  "include": [
    "src",
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./node_modules/*",
    "./dist/",
    "./dist/*",
    "./eslint.config.mjs"
  ]
}