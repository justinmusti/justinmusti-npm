{
  "name": "@justinmusti/storage",
  "version": "0.0.9",
  "description": "JustinMusti Node and Browser unified storage.",
  "type": "module",
  "main": "./dist/browser/index.js",
  "module": "./dist/node/index.js",
  "browser": "./dist/browser/index.js",
  "exports": {
    ".": "./dist/browser/index.js",
    "./node": "./dist/node/index.js",
    "./browser": "./dist/browser/index.js"
  },
  "scripts": {
    "clean": "rimraf ./dist ./packs/* || true",
    "clean:browser": "rimraf ./dist/browser || true",
    "clean:node": "rimraf ./dist/node || true",
    "build:tsc": "tsc -p ./tsconfig.json  --skipLibCheck",
    "build:tsc-multi": "rm -rf ./dist && copyfiles -u 1 \"src/**/*.d.ts\" dist &&  tsc-multi",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly ",
    "build:node": "tsc -p tsconfig.json --skipLibCheck",
    "build:browser": "npm-run-all clean:browser build:esbuild",
    "build:esbuild": "esbuild  `find ./src/browser \\( -name '*.ts' -o -name '*.tsx' \\)` --outdir=./dist/browser --sourcemap --platform=browser",
    "build-bun": "npm-run-all bun build src/browser/index.ts  --outdir=./dist/browser/ --sourcemap=linked --entry-naming='[dir]/[name].js' --footer='// Generated by BUN'",
    "build": "npm-run-all clean build:node build:esbuild build:types copy:types",
    "copy:types": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "esbuild": "npm-run-all clean:browser esbuild  `find ./src/browser \\( -name '*.ts' -o -name '*.tsx' \\)` --outdir=./dist/browser --sourcemap --platform=browser && npm run build:types",
    "esbuild1": "esbuild --help",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "./dist/*",
    "README.md"
  ],
  "dependencies": {
    "@justinmusti/utils": "^0.0.8"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "@eslint/js": "^9.10.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.7.5",
    "copyfiles": "^2.4.1",
    "eslint": "^9.10.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.3",
    "rimraf": "^6.0.1",
    "tsc-multi": "^1.1.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justinmusti/justinmusti-npm.git"
  },
  "keywords": [
    "JustinMusti",
    "Storage",
    "Browser",
    "Node",
    "agnostic"
  ],
  "author": "JustinMusti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justinmusti/justinmusti-npm/issues"
  },
  "homepage": "https://github.com/justinmusti/justinmusti-npm#readme"
}
